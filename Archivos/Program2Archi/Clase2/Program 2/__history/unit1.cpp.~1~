#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
bool EsLetra(char c)
{
	AnsiString let="qwertyuiopasdfghjklñzxcvbnmQWERTYUIOPASDFGHJKLKÑZXCVBNMáéíóúÁÉÍÓÚ";
	return let.Pos(c)>0;
}


bool EsSigno(char c)
{
	AnsiString signos=".,";
	return signos.Pos(c)>0;
}
void  Limpiar(AnsiString nom){
   char x;
   ifstream fi(nom.c_str());
   ofstream fo("temporal.tmp");
   if(!fi.fail())
   {
	   while(!fi.eof())
	   {
		  x=fi.get();
		  if(!fi.eof())
		  {
			  if(EsLetra(x)|| EsSigno(x) || x==10)
			  {
				  fo.put(x);
			  }
		  }
	   }
   }
   fi.close();
   fo.close();
   remove(nom.c_str());
   rename("temporal.tmp",nom.c_str());





}
void __fastcall TForm1::Button1Click(TObject *Sender)
{
   if(OpenTextFileDialog1->Execute())
   {
	   Limpiar(OpenTextFileDialog1->FileName);
   }
}
//---------------------------------------------------------------------------

void Visualizar(AnsiString nom,TMemo *m)
{
	char x;
	AnsiString s="";
	ifstream fi(nom.c_str());                 //abrir modo lectura
	if(!fi.fail()){
	   while(!fi.eof())
	   {
		  x =fi.get();
		  if(!fi.eof())
		  {
			 if(x==10)
			 {
				 m->Lines->Add(s);
				 s="";
			 }
			 else
			 {
				 s=s+x;
			 }
		  }

	   }
	   if(s!="")
	   {
		  m->Lines->Add(s);
	   }
	}
	fi.close();

}
void __fastcall TForm1::Button2Click(TObject *Sender)
{
	 if(OpenTextFileDialog1->Execute())
	 {
	   Visualizar(OpenTextFileDialog1->FileName, Memo1);
	 }
}
